---
import { SEO } from "astro-seo";

const { tituloPagina } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <SEO
      title="Portifolio Gabriel Basaglia, desenvolvedor FullStack"
      description="Desenvolvedor FullStack, Astro, React, NextJS e Node"
    />
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/developer7.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{tituloPagina}</title>
  </head>
  <body class="bg-light dark:bg-dark text-dark dark:text-light">
    <h1>{tituloPagina}</h1>
    <slot />
  </body>
</html>
